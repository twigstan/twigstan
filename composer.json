{
    "name": "twigstan/twigstan",
    "description": "TwigStan is a static analyzer for Twig templates powered by PHPStan",
    "license": "MIT",
    "keywords": [
        "static analysis",
        "twig"
    ],
    "require": {
        "php": "^8.3",
        "composer-runtime-api": "^2.2",
        "nette/bootstrap": "^3.2",
        "nette/di": "^3.2.2",
        "nette/neon": "^3.4",
        "nikic/php-parser": "^4.18.0",
        "phpstan/phpdoc-parser": "^1.30",
        "phpstan/phpstan": "^1.12",
        "symfony/console": "^7.1",
        "symfony/filesystem": "^7.1",
        "symfony/finder": "^7.1",
        "symfony/process": "^7.1",
        "twig/twig": "^3.13"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.43",
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpunit/phpunit": "^10.5",
        "shipmonk/composer-dependency-analyser": "^1.7",
        "symfony/framework-bundle": "^7.1",
        "symfony/http-foundation": "^7.1",
        "symfony/http-kernel": "^7.1",
        "symfony/routing": "^7.1",
        "symfony/twig-bridge": "^7.1",
        "symfony/var-dumper": "^7.1",
        "ticketswap/phpstan-error-formatter": "^1.0.3"
    },
    "autoload": {
        "psr-4": {
            "TwigStan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TwigStan\\": "tests/"
        }
    },
    "bin": [
        "bin/twigstan"
    ],
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "cs": "@php-cs-fixer",
        "dependencies": "vendor/bin/composer-dependency-analyser",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --diff --ansi",
        "phpstan": "vendor/bin/phpstan",
        "phpunit": "vendor/bin/phpunit",
        "qa": [
            "composer normalize --diff",
            "@php-cs-fixer",
            "@phpstan",
            "@phpunit",
            "@dependencies"
        ]
    }
}
